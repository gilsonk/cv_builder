root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.json]
indent_style = space
indent_size = 4

[*.toml]
indent_style = space
indent_size = 4

[*.ini]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3

[*.py]
indent_style = space
indent_size = 4
profile = black

[Makefile]
indent_style = tab
